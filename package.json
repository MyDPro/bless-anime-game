{
  "name": "bless-anime-game",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build:debug": "mkdirp ./build/public && esbuild src/core/main.ts --bundle --outfile=./build/public/index.js --platform=browser --target=es2020 --log-level=info && cp -r public/index.html public/style.css public/data public/models ./build/public && bls-sdk-ts build ./index.ts -o ./build -f debug.wasm",
    "preview": "blessnet preview build/debug.wasm",
    "build:release": "mkdirp ./build/public && esbuild src/core/main.ts --bundle --outfile=./build/public/index.js && cp -r public/index.html public/style.css public/data public/models ./build/public && bls-sdk-ts build ./index.ts -o ./build -f release.wasm"
  },
  "dependencies": {
    "@blockless/sdk-ts": "^1.0.5",
    "three": "^0.150.0",
    "mkdirp": "^3.0.1"
  },
  "devDependencies": {
    "@types/three": "^0.150.1",
    "esbuild": "^0.25.4"
  },
  "bls": {
    "functionId": "bless-function_bless-anime-game-1.0.0"
  }
}
